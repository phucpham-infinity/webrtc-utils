{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,


    /* Bundler mode */
    "isolatedModules": true,
    "noEmit": true,
  

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["node_modules/microbundle/index.d.ts"]
}
